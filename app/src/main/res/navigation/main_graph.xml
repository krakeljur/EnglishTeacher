<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/signInFragment">

    <fragment
        android:id="@+id/signInFragment"
        android:name="com.example.sign_in.presentation.sign_in.SignInFragment"
        android:label="@string/signIn"
        tools:layout="@layout/fragment_sign_in"
        >
        <action
            android:id="@+id/action_signInFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_signInFragment_to_catalogFragment"
            app:destination="@id/catalogFragment"
            app:popUpTo="@id/signInFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.sign_up.presentation.sign_up.SignUpFragment"
        android:label="@string/signUp"
        tools:layout="@layout/fragment_sign_up" />

    <fragment
        android:id="@+id/catalogFragment"
        android:name="com.example.catalog.presentation.catalog.CatalogFragment"
        android:label="@string/catalog"
        tools:layout="@layout/fragment_catalog">
        <action
            android:id="@+id/action_catalogFragment_to_cardFragment"
            app:destination="@id/cardFragment" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.profile.presentation.profile.ProfileFragment"
        android:label="@string/profile"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profileFragment_to_statisticFragment"
            app:destination="@id/statisticFragment" />
    </fragment>

    <fragment
        android:id="@+id/cardFragment"
        android:name="com.example.catalog.presentation.card.CardFragment"
        android:label="@string/card"
        tools:layout="@layout/fragment_card">
        <action
            android:id="@+id/action_cardFragment_to_gameFragment"
            app:destination="@id/gameFragment" />
        <argument
            android:name="idLesson"
            app:argType="long" />
    </fragment>

    <fragment
        android:id="@+id/gameFragment"
        android:name="com.example.game.presentation.game.GameFragment"
        android:label="@string/game"
        tools:layout="@layout/fragment_game"
        >
        <argument
            android:name="idLesson"
            app:argType="long" />
    </fragment>

    <fragment
        android:id="@+id/statisticFragment"
        android:name="com.example.profile.presentation.statistic.StatisticFragment"
        android:label="@string/statistic"
        tools:layout="@layout/fragment_statistic"/>


</navigation>