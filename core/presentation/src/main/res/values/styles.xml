<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- MY THEME -->
    <style name="CoreTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Other style attributes -->
        <item name="actionBarTheme">@style/MyActionBarTheme</item>
        <item name="android:statusBarColor">@color/hud</item>


    </style>

    <!-- MY STYLES -->
    <style name="MyActionBarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:buttonStyle">@style/MyToolbarButtonStyle</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="MyToolbarButtonStyle" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:tint">#FFFFFFFF</item>
    </style>

    <style name="DefaultAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="colorAccent">@color/white</item>
    </style>



</resources>